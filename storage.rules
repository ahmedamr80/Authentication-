rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // --- HELPER FUNCTIONS ---
    
    // 1. Check for Admin (using the Custom Claim we relied on earlier)
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // 2. Validate Image Type (Must be an image)
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // 3. Validate Size (Max 5MB)
    function isSmallEnough() {
      return request.resource.size < 5 * 1024 * 1024;
    }

    // --- PUBLIC ASSETS (Events & Clubs) ---
    
    // Events: Public Read, Admin Write
    match /events/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() && isImage() && isSmallEnough();
    }

    // Clubs: Public Read, Admin Write
    // (Based on your error logs, your app stores images here)
    match /club-pictures/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() && isImage() && isSmallEnough();
    }
    
    // ... Next Chunks ...
  }
}